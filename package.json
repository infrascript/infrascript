{
  "devDependencies": {
    "@monorepolint/core": "^0.4.0",
    "@monorepolint/utils": "^0.4.0",
    "@types/node": "^12",
    "jest-diff": "^26.0.1",
    "lerna": "^3.21.0",
    "monorepolint": "^0.4.0",
    "prettier": "^2.0.5",
    "runtypes": "^4.2.0",
    "typescript-monorepo-toolkit": "^0.0.7"
  },
  "prettier": "./packages/@infrascript/config-prettier",
  "private": true,
  "scripts": {
    "build": "tsc -b build-all-tsconfig.json",
    "clean": "rm -rf ./packages/*/{dist,tsconfig.tsbuildinfo} ./packages/@infrascript/*/{dist,tsconfig.tsbuildinfo}",
    "fmt": "monorepolint check --fix && prettier --write './**/*.{js,md,ts}'",
    "fmt:check": "monorepolint check && prettier --check './**/*.{js,md,ts}'",
    "lint": "eslint . --ext .ts",
    "prebuild": "typescript-monorepo-toolkit inject-refs -a .",
    "watch": "yarn build -w"
  },
  "workspaces": [
    "packages/*",
    "packages/@infrascript/*"
  ]
}
