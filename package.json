{
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/@configscript/*"
  ],
  "scripts": {
    "build": "tsc -b build-all-tsconfig.json",
    "clean": "rm -rf ./packages/*/{dist,tsconfig.tsbuildinfo} ./packages/@configscript/*/{dist,tsconfig.tsbuildinfo}",
    "lint": "eslint . --ext .ts",
    "prebuild": "typescript-monorepo-toolkit inject-refs -a ."
  },
  "devDependencies": {
    "lerna": "^3.20.2",
    "prettier": "^2.0.5",
    "typescript-monorepo-toolkit": "^0.0.7"
  },
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
