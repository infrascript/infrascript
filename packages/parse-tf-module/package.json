{
  "name": "@ts-tf/parse-tf-module",
  "description": "Parse Terraform module, discovering modules and outputs",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-p -l 'build:*'",
    "build:go": "env GOOS=js GOARCH=wasm go build -o dist/main.wasm ./src",
    "build:ts": "tsc",
    "watch": "run-p -l 'watch:*'",
    "watch:go": "find {src,lib} | entr -n yarn build:go",
    "watch:ts": "tsc -w --preserveWatchOutput"
  },
  "dependencies": {
    "fs-extra": "^9.0.0",
    "globby": "^11.0.0",
    "node-fetch": "^2.6.0",
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.1.0",
    "@types/node": "^13.13.4",
    "@types/node-fetch": "^2.5.7",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.8.3"
  }
}
